<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="feedbackVM"
            type="com.rentalhomes.ui.common.setting.feedback.FeedbackVM" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".ui.common.setting.feedback.FeedbackActivity">

        <!--Header-->
        <include
            android:id="@+id/headerBar"
            layout="@layout/header_bar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/etShareExperience"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_30sdp"
            android:background="@drawable/box_white_curved_5"
            android:backgroundTint="@color/grey_109"
            android:fontFamily="@font/product_sans_regular"
            android:gravity="top"
            android:textColorHint="@color/grey_200"
            android:hint="@string/share_your_experience_with_us"
            android:imeOptions="actionNext"
            android:inputType="textMultiLine|textCapSentences"
            android:lines="8"
            android:maxLength="500"
            android:padding="@dimen/_8sdp"
            android:text="@={feedbackVM.mldFeedback}"
            android:textColor="@color/grey_400"
            android:textSize="@dimen/_12ssp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/headerBar" />

        <com.rentalhomes.utils.customviews.RegularTextView
            android:id="@+id/tvValShareExp"
            style="@style/textView_validation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_4sdp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="@id/etShareExperience"
            app:layout_constraintStart_toStartOf="@id/etShareExperience"
            app:layout_constraintTop_toBottomOf="@id/etShareExperience"
            tools:text="@string/msg_empty_share_experience" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnSubmitFeedback"
            style="@style/button_de_active"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_50sdp"
            android:background="@drawable/box_disable_curved_8"
            android:text="@string/submit_feedback"
            app:layout_constraintEnd_toEndOf="@id/etShareExperience"
            app:layout_constraintStart_toStartOf="@id/etShareExperience"
            app:layout_constraintTop_toBottomOf="@id/guideline" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.55" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>