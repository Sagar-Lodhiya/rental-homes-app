<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="changePasswordVM"
            type="com.rentalhomes.ui.common.setting.changepassword.ChangePasswordVM" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:focusableInTouchMode="true"
        tools:context=".ui.common.setting.changepassword.ChangePasswordActivity">

        <!--Header-->
        <include
            android:id="@+id/headerBar"
            layout="@layout/header_bar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!--App Logo-->
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivAppLogo"
            android:layout_width="@dimen/_120sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_marginHorizontal="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_16sdp"
            android:src="@drawable/logo_1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/headerBar" />

        <!--Tabs Email & Password-->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clTab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_30sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ivAppLogo">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/product_sans_bold"
                android:onClick="@{()->changePasswordVM.onEmailClick()}"
                android:text="@string/email"
                android:textColor="@color/black"
                android:textSize="@dimen/_14ssp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:fontFamily="@font/product_sans_regular"
                android:onClick="@{()->changePasswordVM.onPasswordClick()}"
                android:text="@string/password"
                android:textColor="@color/black"
                android:textSize="@dimen/_14ssp"
                app:layout_constraintStart_toEndOf="@id/tvEmail"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/vdEmail"
                android:layout_width="0dp"
                android:layout_height="0.8dp"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@color/black"
                app:layout_constraintEnd_toEndOf="@id/tvEmail"
                app:layout_constraintStart_toStartOf="@id/tvEmail"
                app:layout_constraintTop_toBottomOf="@id/tvEmail" />

            <View
                android:id="@+id/vdPassword"
                android:layout_width="0dp"
                android:layout_height="0.8dp"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@color/black"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="@id/tvPassword"
                app:layout_constraintStart_toStartOf="@id/tvPassword"
                app:layout_constraintTop_toBottomOf="@id/tvPassword" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!--Email layout-->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clEmail"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/_10sdp"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/clTab">

            <!--Current Email-->
            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/etCurrentEmail"
                style="@style/editText_change_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:background="@drawable/box_grey_outline_curved_5"
                android:hint="@string/current_email"
                android:imeOptions="actionNext"
                android:text="@={changePasswordVM.mldChangeEmail.oldEmail}"
                app:layout_constraintTop_toTopOf="parent" />

            <com.rentalhomes.utils.customviews.RegularTextView
                android:id="@+id/tvValCurrentEmail"
                style="@style/textView_validation"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/msg_empty_email"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="@id/etCurrentEmail"
                app:layout_constraintStart_toStartOf="@id/etCurrentEmail"
                app:layout_constraintTop_toBottomOf="@id/etCurrentEmail" />

            <!--Current Email Password-->
            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/etEmailPassword"
                style="@style/editText_change_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_16sdp"
                android:background="@drawable/box_grey_outline_curved_5"
                android:hint="@string/current_password"
                android:imeOptions="actionNext"
                android:text="@={changePasswordVM.mldChangeEmail.password}"
                app:layout_constraintTop_toBottomOf="@id/tvValCurrentEmail" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivVisEmailCurrent"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:padding="@dimen/_5sdp"
                android:src="@drawable/ic_visibility_off"
                app:layout_constraintBottom_toBottomOf="@id/etEmailPassword"
                app:layout_constraintEnd_toEndOf="@id/etEmailPassword"
                app:layout_constraintTop_toTopOf="@id/etEmailPassword" />

            <com.rentalhomes.utils.customviews.RegularTextView
                android:id="@+id/tvValEmailPassword"
                style="@style/textView_validation"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/msg_empty_password"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="@id/etEmailPassword"
                app:layout_constraintStart_toStartOf="@id/etEmailPassword"
                app:layout_constraintTop_toBottomOf="@id/etEmailPassword" />

            <!--New Email-->
            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/etNewEmail"
                style="@style/editText_change_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_16sdp"
                android:background="@drawable/box_grey_outline_curved_5"
                android:hint="@string/new_email"
                android:imeOptions="actionNext"
                android:text="@={changePasswordVM.mldChangeEmail.newEmail}"
                app:layout_constraintTop_toBottomOf="@id/tvValEmailPassword" />

            <com.rentalhomes.utils.customviews.RegularTextView
                android:id="@+id/tvValNewEmail"
                style="@style/textView_validation"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/msg_empty_email"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="@id/etNewEmail"
                app:layout_constraintStart_toStartOf="@id/etNewEmail"
                app:layout_constraintTop_toBottomOf="@id/etNewEmail" />

            <!--Confirm Email-->
            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/etConfirmEmail"
                style="@style/editText_change_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_16sdp"
                android:background="@drawable/box_grey_outline_curved_5"
                android:hint="@string/confirm_email"
                android:imeOptions="actionDone"
                app:layout_constraintTop_toBottomOf="@id/tvValNewEmail" />

            <com.rentalhomes.utils.customviews.RegularTextView
                android:id="@+id/tvValConfirmEmail"
                style="@style/textView_validation"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/msg_empty_email"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="@id/etConfirmEmail"
                app:layout_constraintStart_toStartOf="@id/etConfirmEmail"
                app:layout_constraintTop_toBottomOf="@id/etConfirmEmail" />

            <!--Button Change Email-->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnChangeEmail"
                style="@style/button_de_active"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_65sdp"
                android:layout_marginBottom="@dimen/_30sdp"
                android:background="@drawable/box_disable_curved_8"
                android:onClick="@{() -> changePasswordVM.onChangeEmailPressed()}"
                android:text="@string/change_email"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!--Password layout-->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clPassword"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/_10sdp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/clTab">

            <!--Current Password-->
            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/etCurrentPassword"
                style="@style/editText_change_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:background="@drawable/box_grey_outline_curved_5"
                android:hint="@string/current_password"
                android:imeOptions="actionNext"
                android:text="@={changePasswordVM.mldChangePassword.oldPassword}"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivVisPassCurrent"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:padding="@dimen/_5sdp"
                android:src="@drawable/ic_visibility_off"
                app:layout_constraintBottom_toBottomOf="@id/etCurrentPassword"
                app:layout_constraintEnd_toEndOf="@id/etCurrentPassword"
                app:layout_constraintTop_toTopOf="@id/etCurrentPassword" />

            <com.rentalhomes.utils.customviews.RegularTextView
                android:id="@+id/tvValCurrentPassword"
                style="@style/textView_validation"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/msg_empty_password"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="@id/etCurrentPassword"
                app:layout_constraintStart_toStartOf="@id/etCurrentPassword"
                app:layout_constraintTop_toBottomOf="@id/etCurrentPassword" />

            <!--New Password-->
            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/etNewPassword"
                style="@style/editText_change_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_16sdp"
                android:background="@drawable/box_grey_outline_curved_5"
                android:hint="@string/new_password"
                android:imeOptions="actionNext"
                android:text="@={changePasswordVM.mldChangePassword.newPassword}"
                app:layout_constraintTop_toBottomOf="@id/tvValCurrentPassword" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivVisPassNew"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:padding="@dimen/_5sdp"
                android:src="@drawable/ic_visibility_off"
                app:layout_constraintBottom_toBottomOf="@id/etNewPassword"
                app:layout_constraintEnd_toEndOf="@id/etNewPassword"
                app:layout_constraintTop_toTopOf="@id/etNewPassword" />

            <com.rentalhomes.utils.customviews.RegularTextView
                android:id="@+id/tvValNewPassword"
                style="@style/textView_validation"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/msg_empty_email"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="@id/etNewPassword"
                app:layout_constraintStart_toStartOf="@id/etNewPassword"
                app:layout_constraintTop_toBottomOf="@id/etNewPassword" />

            <!--Confirm Password-->
            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/etConfirmPassword"
                style="@style/editText_change_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_16sdp"
                android:background="@drawable/box_grey_outline_curved_5"
                android:hint="@string/confirm_password"
                android:imeOptions="actionDone"
                app:layout_constraintTop_toBottomOf="@id/tvValNewPassword" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivVisPassConfirm"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:padding="@dimen/_5sdp"
                android:src="@drawable/ic_visibility_off"
                app:layout_constraintBottom_toBottomOf="@id/etConfirmPassword"
                app:layout_constraintEnd_toEndOf="@id/etConfirmPassword"
                app:layout_constraintTop_toTopOf="@id/etConfirmPassword" />

            <com.rentalhomes.utils.customviews.RegularTextView
                android:id="@+id/tvValConfirmPassword"
                style="@style/textView_validation"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/msg_empty_email"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="@id/etConfirmPassword"
                app:layout_constraintStart_toStartOf="@id/etConfirmPassword"
                app:layout_constraintTop_toBottomOf="@id/etConfirmPassword" />

            <!--Button Change Password-->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnChangePassword"
                style="@style/button_de_active"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_65sdp"
                android:layout_marginBottom="@dimen/_30sdp"
                android:background="@drawable/box_disable_curved_8"
                android:onClick="@{() -> changePasswordVM.onChangePasswordPressed()}"
                android:text="@string/change_password"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>