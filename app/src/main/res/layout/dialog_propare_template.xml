<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clSelectTemplate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingStart="@dimen/_20sdp"
        android:paddingEnd="@dimen/_10sdp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/box_white_with_curved_shadow_5"
            android:paddingVertical="@dimen/_16sdp"
            android:paddingStart="@dimen/_16sdp"
            android:paddingEnd="@dimen/_10sdp">

            <com.rentalhomes.utils.customviews.BoldTextView
                android:id="@+id/tvSelectTemplate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/select_template"
                android:textColor="@color/black"
                android:textSize="@dimen/_12ssp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <RadioGroup
                android:id="@+id/radioGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvSelectTemplate">

                <androidx.appcompat.widget.AppCompatRadioButton
                    android:id="@+id/rbPropareTemplate"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:layout_height="wrap_content"
                    android:button="@drawable/selector_radio_button"
                    android:fontFamily="@font/product_sans_bold"
                    android:paddingStart="@dimen/_5sdp"
                    android:paddingTop="@dimen/_1sdp"
                    android:gravity="center_vertical"
                    android:text="@string/set_as_default"
                    android:textColor="@color/grey_103"
                    android:textSize="@dimen/_11ssp" />

                <androidx.appcompat.widget.AppCompatRadioButton
                    android:id="@+id/rbCustomTemplate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_22sdp"
                    android:button="@drawable/selector_radio_button"
                    android:fontFamily="@font/product_sans_bold"
                    android:paddingStart="@dimen/_5sdp"
                    android:paddingTop="@dimen/_1sdp"
                    android:gravity="center_vertical"
                    android:text="@string/set_as_default"
                    android:textColor="@color/grey_103"
                    android:textSize="@dimen/_11ssp" />

            </RadioGroup>

            <View
                android:id="@+id/viewDivider"
                android:layout_width="match_parent"
                android:layout_height="0.8dp"
                android:background="@color/grey_100"
                app:layout_constraintBottom_toBottomOf="@id/radioGroup"
                app:layout_constraintTop_toTopOf="@id/radioGroup" />

            <com.rentalhomes.utils.customviews.RegularTextView
                android:id="@+id/tvPropareTemplate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_10sdp"
                android:text="@string/propare_template"
                android:textColor="@color/black"
                android:gravity="center_vertical"
                android:textSize="@dimen/_12ssp"
                app:layout_constraintBottom_toTopOf="@id/viewDivider"
                app:layout_constraintEnd_toStartOf="@id/radioGroup"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/radioGroup" />

            <com.rentalhomes.utils.customviews.RegularTextView
                android:id="@+id/tvCustomTemplate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:drawableEnd="@drawable/ic_edit"
                android:drawablePadding="@dimen/_5sdp"
                android:gravity="center_vertical"
                android:text="@string/custom_template"
                android:textColor="@color/black"
                android:textSize="@dimen/_12ssp"
                app:layout_constraintBottom_toBottomOf="@+id/radioGroup"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/viewDivider" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>