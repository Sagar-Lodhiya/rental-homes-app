<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="addNonListedVM"
            type="com.rentalhomes.ui.common.addnonlisted.AddNonListedVM" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:focusableInTouchMode="true"
        tools:context=".ui.common.addnonlisted.AddNonListedActivity">

        <!--Header-->
        <include
            android:id="@+id/headerBar"
            layout="@layout/header_bar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.core.widget.NestedScrollView
            android:id="@+id/nsv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/headerBar">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/_16sdp"
                android:paddingBottom="@dimen/_10sdp">

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/glVertical_4"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.4" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/clChoosePhoto"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_120sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:background="@drawable/bg_choose_photo"
                    app:layout_constraintTop_toTopOf="parent">

                    <!--CardView Property Photo-->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cvPropertyPhoto"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:elevation="@dimen/_10sdp"
                        android:onClick="@{()->addNonListedVM.onPropertyPhotoPressed()}"
                        android:visibility="gone"
                        app:cardCornerRadius="10dp">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/ivPropertyImage"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/house" />
                    </androidx.cardview.widget.CardView>

                    <!--Gallery & Camera main layout-->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/clGalleryCamera"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <!--Vertical line-->
                        <View
                            android:id="@+id/vdVertical"
                            android:layout_width="0.8dp"
                            android:layout_height="0dp"
                            android:layout_marginVertical="@dimen/_20sdp"
                            android:background="@color/grey_104"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <!--Gallery layout-->
                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:id="@+id/llGallery"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:gravity="center"
                            android:onClick="@{()->addNonListedVM.onGalleryPressed()}"
                            android:orientation="vertical"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@id/vdVertical"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/ivGallery"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_gallery" />

                            <com.rentalhomes.utils.customviews.RegularTextView
                                android:id="@+id/tvChooseFromGallery"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:text="@string/choose_from_gallery"
                                android:textColor="@color/black" />
                        </androidx.appcompat.widget.LinearLayoutCompat>

                        <!--Camera layout-->
                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:id="@+id/llCamera"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:gravity="center"
                            android:onClick="@{()->addNonListedVM.onCameraPressed()}"
                            android:orientation="vertical"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@id/vdVertical"
                            app:layout_constraintTop_toTopOf="parent">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/ivCamera"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_camera" />

                            <com.rentalhomes.utils.customviews.RegularTextView
                                android:id="@+id/tvCapturePhoto"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:text="@string/capture_photo"
                                android:textColor="@color/black" />
                        </androidx.appcompat.widget.LinearLayoutCompat>
                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <com.rentalhomes.utils.customviews.RegularTextView
                    android:id="@+id/tvTapToChangePhoto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:gravity="center"
                    android:text="@string/tap_to_change_the_photo"
                    android:textColor="@color/grey_105"
                    android:textSize="@dimen/_10ssp"
                    android:visibility="invisible"
                    app:layout_constraintTop_toBottomOf="@id/clChoosePhoto" />

                <!--Address-->
                <com.rentalhomes.utils.customviews.BoldTextView
                    android:id="@+id/tvAddress"
                    style="@style/textView_black_201_14sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:text="@string/address"
                    app:layout_constraintTop_toBottomOf="@id/tvTapToChangePhoto" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/etAddress"
                    style="@style/editText_border_grey_corner_10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/box_grey_outline_curved_10"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:maxLength="250"
                    android:maxLines="1"
                    android:text="@={addNonListedVM.mldAddress}"
                    app:layout_constraintTop_toBottomOf="@id/tvAddress" />

                <com.rentalhomes.utils.customviews.RegularTextView
                    android:id="@+id/tvValAddress"
                    style="@style/textView_validation"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="@id/etAddress"
                    app:layout_constraintStart_toStartOf="@id/etAddress"
                    app:layout_constraintTop_toBottomOf="@id/etAddress"
                    tools:text="@string/msg_empty_email" />

                <!--Suburb-->
                <com.rentalhomes.utils.customviews.BoldTextView
                    android:id="@+id/tvSuburb"
                    style="@style/textView_black_201_14sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:text="Suburb"
                    app:layout_constraintTop_toBottomOf="@id/tvValAddress" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/etSuburb"
                    style="@style/editText_border_grey_corner_10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/box_grey_outline_curved_10"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:fontFamily="@font/product_sans_regular"
                    android:inputType="text"
                    android:maxLines="1"
                    android:singleLine="true"
                    app:layout_constraintTop_toBottomOf="@id/tvSuburb" />

                <com.rentalhomes.utils.customviews.RegularTextView
                    android:id="@+id/tvValSuburb"
                    style="@style/textView_validation"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/msg_empty_suburb"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="@id/etSuburb"
                    app:layout_constraintStart_toStartOf="@id/etSuburb"
                    app:layout_constraintTop_toBottomOf="@id/etSuburb"
                    tools:text="@string/msg_empty_suburb" />

                <!--Land Size-->
                <com.rentalhomes.utils.customviews.BoldTextView
                    android:id="@+id/tvLandSize"
                    style="@style/textView_black_201_14sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:text="@string/land_size"
                    app:layout_constraintTop_toBottomOf="@id/tvValSuburb" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/etLandSize"
                    style="@style/editText_border_grey_corner_10"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/box_grey_outline_curved_10"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:maxLength="4"
                    app:layout_constraintEnd_toStartOf="@id/glVertical_4"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvLandSize" />

                <com.rentalhomes.utils.customviews.RegularTextView
                    android:id="@+id/tvMeter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_8sdp"
                    android:text="@string/meters"
                    android:textColor="@color/black_201"
                    android:textSize="@dimen/_12ssp"
                    app:layout_constraintBottom_toBottomOf="@id/etLandSize"
                    app:layout_constraintEnd_toEndOf="@id/etLandSize"
                    app:layout_constraintTop_toTopOf="@id/etLandSize" />

                <com.rentalhomes.utils.customviews.RegularTextView
                    android:id="@+id/tvValLandSize"
                    style="@style/textView_validation"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="@id/etLandSize"
                    app:layout_constraintStart_toStartOf="@id/etLandSize"
                    app:layout_constraintTop_toBottomOf="@id/etLandSize"
                    tools:text="@string/msg_empty_email" />

                <!--Bed layout-->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/clBed"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:background="@drawable/box_grey_outline_curved_10"
                    app:layout_constraintEnd_toStartOf="@id/clBath"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvValLandSize">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/ivBedIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:src="@drawable/ic_bed"
                        android:tint="@color/color_green"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <com.rentalhomes.utils.customviews.RegularTextView
                        android:id="@+id/tvBed"
                        style="@style/textView_bed_bath_car"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/bed"
                        app:layout_constraintTop_toBottomOf="@id/ivBedIcon" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/llCounterBed"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="@dimen/_10sdp"
                        android:gravity="center"
                        android:paddingHorizontal="@dimen/_6sdp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvBed">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/ivMinusBed"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:onClick="@{()->addNonListedVM.onMinusBedPressed()}"
                            android:paddingHorizontal="@dimen/_4sdp"
                            android:paddingVertical="@dimen/_8sdp"
                            android:src="@drawable/ic_minus_icon"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <com.rentalhomes.utils.customviews.RegularTextView
                            android:id="@+id/tvCountBed"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/_6sdp"
                            android:background="@drawable/box_grey_outline_curved_3"
                            android:gravity="center"
                            android:maxLength="2"
                            android:paddingVertical="@dimen/_2sdp"
                            android:text="@string/number_0"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_12ssp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@id/ivPlusBed"
                            app:layout_constraintStart_toEndOf="@id/ivMinusBed"
                            app:layout_constraintTop_toTopOf="parent" />

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/ivPlusBed"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:onClick="@{()->addNonListedVM.onPlusBedPressed()}"
                            android:padding="@dimen/_5sdp"
                            android:src="@drawable/ic_plus_icon"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <!--Bath layout-->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/clBath"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginHorizontal="@dimen/_8sdp"
                    android:background="@drawable/box_grey_outline_curved_10"
                    app:layout_constraintBottom_toBottomOf="@id/clBed"
                    app:layout_constraintEnd_toStartOf="@id/clCar"
                    app:layout_constraintStart_toEndOf="@id/clBed"
                    app:layout_constraintTop_toTopOf="@id/clBed">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/ivBathIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:src="@drawable/ic_bath"
                        android:tint="@color/color_green"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <com.rentalhomes.utils.customviews.RegularTextView
                        android:id="@+id/tvBath"
                        style="@style/textView_bed_bath_car"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/bath"
                        app:layout_constraintTop_toBottomOf="@id/ivBathIcon" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/llCounterBath"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="@dimen/_10sdp"
                        android:gravity="center"
                        android:paddingHorizontal="@dimen/_6sdp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvBath">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/ivMinusBath"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:onClick="@{()->addNonListedVM.onMinusBathPressed()}"
                            android:paddingHorizontal="@dimen/_4sdp"
                            android:paddingVertical="@dimen/_8sdp"
                            android:src="@drawable/ic_minus_icon"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <com.rentalhomes.utils.customviews.RegularTextView
                            android:id="@+id/tvCountBath"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/_4sdp"
                            android:background="@drawable/box_grey_outline_curved_3"
                            android:gravity="center"
                            android:maxLength="2"
                            android:paddingVertical="@dimen/_2sdp"
                            android:text="@string/number_0"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_12ssp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@id/ivPlusBath"
                            app:layout_constraintStart_toEndOf="@id/ivMinusBath"
                            app:layout_constraintTop_toTopOf="parent" />

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/ivPlusBath"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:onClick="@{()->addNonListedVM.onPlusBathPressed()}"
                            android:padding="@dimen/_5sdp"
                            android:src="@drawable/ic_plus_icon"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <!--Car layout-->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/clCar"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="@drawable/box_grey_outline_curved_10"
                    app:layout_constraintBottom_toBottomOf="@id/clBed"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/clBath"
                    app:layout_constraintTop_toTopOf="@id/clBed">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/ivCarIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:src="@drawable/ic_car"
                        android:tint="@color/color_green"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <com.rentalhomes.utils.customviews.RegularTextView
                        android:id="@+id/tvCar"
                        style="@style/textView_bed_bath_car"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/car"
                        app:layout_constraintTop_toBottomOf="@id/ivCarIcon" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/llCounterCar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="@dimen/_10sdp"
                        android:gravity="center"
                        android:paddingHorizontal="@dimen/_6sdp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvCar">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/ivMinusCar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:onClick="@{()->addNonListedVM.onMinusCarPressed()}"
                            android:paddingHorizontal="@dimen/_4sdp"
                            android:paddingVertical="@dimen/_8sdp"
                            android:src="@drawable/ic_minus_icon"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <com.rentalhomes.utils.customviews.RegularTextView
                            android:id="@+id/tvCountCar"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/_6sdp"
                            android:background="@drawable/box_grey_outline_curved_3"
                            android:gravity="center"
                            android:maxLength="2"
                            android:paddingVertical="@dimen/_2sdp"
                            android:text="@string/number_0"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_12ssp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@id/ivPlusCar"
                            app:layout_constraintStart_toEndOf="@id/ivMinusCar"
                            app:layout_constraintTop_toTopOf="parent" />

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/ivPlusCar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:onClick="@{()->addNonListedVM.onPlusCarPressed()}"
                            android:padding="@dimen/_5sdp"
                            android:src="@drawable/ic_plus_icon"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <!--Description-->
                <com.rentalhomes.utils.customviews.BoldTextView
                    android:id="@+id/tvDescription"
                    style="@style/textView_black_201_14sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:text="@string/description"
                    app:layout_constraintTop_toBottomOf="@id/clBed" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/etDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/box_grey_outline_curved_10"
                    android:fontFamily="@font/product_sans_regular"
                    android:gravity="top|start"
                    android:imeOptions="actionDone"
                    android:inputType="textMultiLine|textCapSentences"
                    android:lines="5"
                    android:maxLength="1000"
                    android:maxLines="5"
                    android:paddingHorizontal="@dimen/_5sdp"
                    android:paddingVertical="@dimen/_10sdp"
                    android:text="@={addNonListedVM.mldDescription}"
                    android:textColor="@color/grey_200"
                    android:textSize="@dimen/_14ssp"
                    app:layout_constraintTop_toBottomOf="@id/tvDescription" />

                <com.rentalhomes.utils.customviews.RegularTextView
                    android:id="@+id/tvValDescription"
                    style="@style/textView_validation"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="@id/etDescription"
                    app:layout_constraintStart_toStartOf="@id/etDescription"
                    app:layout_constraintTop_toBottomOf="@id/etDescription"
                    tools:text="@string/msg_empty_email" />

                <!--Agent Information-->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/clAgentInformation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:visibility="gone"
                    app:layout_constraintTop_toBottomOf="@id/tvValDescription">

                    <com.rentalhomes.utils.customviews.BoldTextView
                        android:id="@+id/tvAgentInformation"
                        style="@style/textView_black_201_14sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/agent_information"
                        app:layout_constraintTop_toTopOf="parent" />

                    <!--Layout of first name last name-->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/clFLName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_20sdp"
                        app:layout_constraintTop_toBottomOf="@id/tvAgentInformation">

                        <!--First Name-->
                        <com.rentalhomes.utils.customviews.RegularTextView
                            android:id="@+id/tvFirstName"
                            style="@style/textView_black_201_12sp"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/_5sdp"
                            android:text="@string/hint_first_name"
                            app:layout_constraintEnd_toStartOf="@id/tvLastName"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/etFirstName"
                            style="@style/editText_border_grey_corner_10"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:background="@drawable/box_grey_outline_curved_10"
                            android:imeOptions="actionNext"
                            android:inputType="textCapWords"
                            android:maxLength="30"
                            android:maxLines="1"
                            app:layout_constraintEnd_toEndOf="@id/tvFirstName"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/tvFirstName" />

                        <com.rentalhomes.utils.customviews.RegularTextView
                            android:id="@+id/tvValFirstName"
                            style="@style/textView_validation"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            app:layout_constraintEnd_toEndOf="@id/etFirstName"
                            app:layout_constraintStart_toStartOf="@id/etFirstName"
                            app:layout_constraintTop_toBottomOf="@id/etFirstName"
                            tools:text="@string/msg_first_name_length" />

                        <!--Last Name-->
                        <com.rentalhomes.utils.customviews.RegularTextView
                            android:id="@+id/tvLastName"
                            style="@style/textView_black_201_12sp"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:text="@string/hint_last_name"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@id/tvFirstName"
                            app:layout_constraintTop_toTopOf="@id/tvFirstName" />

                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/etLastName"
                            style="@style/editText_border_grey_corner_10"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:background="@drawable/box_grey_outline_curved_10"
                            android:imeOptions="actionNext"
                            android:inputType="textCapWords"
                            android:maxLength="30"
                            android:maxLines="1"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="@id/tvLastName"
                            app:layout_constraintTop_toBottomOf="@id/tvFirstName" />

                        <com.rentalhomes.utils.customviews.RegularTextView
                            android:id="@+id/tvValLastName"
                            style="@style/textView_validation"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            app:layout_constraintEnd_toEndOf="@id/etLastName"
                            app:layout_constraintStart_toStartOf="@id/etLastName"
                            app:layout_constraintTop_toBottomOf="@id/etLastName"
                            tools:text="@string/msg_last_name_length" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <!--Layout of phone & email-->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/clPhoneEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_20sdp"
                        app:layout_constraintTop_toBottomOf="@id/clFLName">

                        <!--Phone Name-->
                        <com.rentalhomes.utils.customviews.RegularTextView
                            android:id="@+id/tvPhone"
                            style="@style/textView_black_201_12sp"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/_5sdp"
                            android:text="@string/phone"
                            app:layout_constraintEnd_toStartOf="@id/tvEmail"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/etPhone"
                            style="@style/editText_border_grey_corner_10"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:background="@drawable/box_grey_outline_curved_10"
                            android:imeOptions="actionNext"
                            android:inputType="number"
                            android:maxLength="12"
                            android:maxLines="1"
                            app:layout_constraintEnd_toEndOf="@id/tvPhone"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/tvPhone" />

                        <com.rentalhomes.utils.customviews.RegularTextView
                            android:id="@+id/tvValPhone"
                            style="@style/textView_validation"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            app:layout_constraintEnd_toEndOf="@id/etPhone"
                            app:layout_constraintStart_toStartOf="@id/etPhone"
                            app:layout_constraintTop_toBottomOf="@id/etPhone"
                            tools:text="@string/msg_empty_email" />

                        <!--Email Name-->
                        <com.rentalhomes.utils.customviews.RegularTextView
                            android:id="@+id/tvEmail"
                            style="@style/textView_black_201_12sp"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:text="@string/email"
                            app:layout_constraintBottom_toBottomOf="@id/tvPhone"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@id/tvPhone"
                            app:layout_constraintTop_toTopOf="@id/tvPhone" />

                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/etEmail"
                            style="@style/editText_border_grey_corner_10"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:background="@drawable/box_grey_outline_curved_10"
                            android:imeOptions="actionDone"
                            android:inputType="textEmailAddress"
                            android:maxLines="1"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="@id/tvEmail"
                            app:layout_constraintTop_toBottomOf="@id/tvEmail" />

                        <com.rentalhomes.utils.customviews.RegularTextView
                            android:id="@+id/tvValEmail"
                            style="@style/textView_validation"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            app:layout_constraintEnd_toEndOf="@id/etEmail"
                            app:layout_constraintStart_toStartOf="@id/etEmail"
                            app:layout_constraintTop_toBottomOf="@id/etEmail"
                            tools:text="@string/msg_empty_email" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnSave"
                    style="@style/button_de_active"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_50sdp"
                    android:layout_marginTop="@dimen/_50sdp"
                    android:background="@drawable/box_disable_curved_8"
                    android:onClick="@{()->addNonListedVM.onSavePressed()}"
                    android:text="@string/save"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/clAgentInformation" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>