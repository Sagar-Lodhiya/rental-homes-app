<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/box_white_with_curved_shadow_5"
    android:padding="@dimen/_10sdp">

    <com.rentalhomes.utils.customviews.RegularTextView
        android:id="@+id/tvWeek"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Week 6"
        android:textColor="@color/black"
        android:textSize="@dimen/_10sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!--Tier 1-->
    <View
        android:id="@+id/vdTier1"
        android:layout_width="@dimen/_8sdp"
        android:layout_height="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@drawable/circle_green_light"
        android:backgroundTint="@color/grey_light"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvWeek" />

    <com.rentalhomes.utils.customviews.RegularTextView
        android:id="@+id/tvTier1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_5sdp"
        android:text="@string/tier_1"
        android:textColor="@color/grey_light"
        android:textSize="@dimen/_10sdp"
        app:layout_constraintBottom_toBottomOf="@id/vdTier1"
        app:layout_constraintStart_toEndOf="@id/vdTier1"
        app:layout_constraintTop_toTopOf="@id/vdTier1" />

    <com.rentalhomes.utils.customviews.BoldTextView
        android:id="@+id/tvTier1Value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10sdp"
        android:text="24"
        android:textColor="@color/grey_light"
        android:textSize="@dimen/_10sdp"
        app:layout_constraintBottom_toBottomOf="@id/vdTier1"
        app:layout_constraintStart_toEndOf="@id/tvTier1"
        app:layout_constraintTop_toTopOf="@id/vdTier1" />

    <!--Tier 2-->
    <View
        android:id="@+id/vdTier2"
        android:layout_width="@dimen/_8sdp"
        android:layout_height="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@drawable/circle_green_light"
        android:backgroundTint="@color/color_yellow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/vdTier1" />

    <com.rentalhomes.utils.customviews.RegularTextView
        android:id="@+id/tvTier2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_5sdp"
        android:text="@string/tier_2"
        android:textColor="@color/grey_light"
        android:textSize="@dimen/_10sdp"
        app:layout_constraintBottom_toBottomOf="@id/vdTier2"
        app:layout_constraintStart_toEndOf="@id/vdTier2"
        app:layout_constraintTop_toTopOf="@id/vdTier2" />

    <com.rentalhomes.utils.customviews.BoldTextView
        android:id="@+id/tvTier2Value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_8sdp"
        android:text="70"
        android:textColor="@color/grey_light"
        android:textSize="@dimen/_10sdp"
        app:layout_constraintBottom_toBottomOf="@id/vdTier2"
        app:layout_constraintStart_toEndOf="@id/tvTier2"
        app:layout_constraintTop_toTopOf="@id/vdTier2" />

    <!--Tier 3-->
    <View
        android:id="@+id/vdTier3"
        android:layout_width="@dimen/_8sdp"
        android:layout_height="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@drawable/circle_green_light"
        android:backgroundTint="@color/color_green"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/vdTier2" />

    <com.rentalhomes.utils.customviews.RegularTextView
        android:id="@+id/tvTier3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_5sdp"
        android:text="@string/tier_3"
        android:textColor="@color/grey_light"
        android:textSize="@dimen/_10sdp"
        app:layout_constraintBottom_toBottomOf="@id/vdTier3"
        app:layout_constraintStart_toEndOf="@id/vdTier3"
        app:layout_constraintTop_toTopOf="@id/vdTier3" />

    <com.rentalhomes.utils.customviews.BoldTextView
        android:id="@+id/tvTier3Value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_8sdp"
        android:text="90"
        android:textColor="@color/grey_light"
        android:textSize="@dimen/_10sdp"
        app:layout_constraintBottom_toBottomOf="@id/vdTier3"
        app:layout_constraintStart_toEndOf="@id/tvTier3"
        app:layout_constraintTop_toTopOf="@id/vdTier3" />

</androidx.constraintlayout.widget.ConstraintLayout>