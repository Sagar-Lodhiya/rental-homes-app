<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="signUpVM"
            type="com.rentalhomes.ui.common.signup.SignUpVM" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:focusableInTouchMode="true"
        android:paddingHorizontal="@dimen/_15sdp"
        tools:context=".ui.common.signup.SignUpActivity">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnContinue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp"
            android:background="@drawable/box_disable_curved_8"
            android:elevation="0dp"
            android:fontFamily="@font/product_sans_bold"
            android:stateListAnimator="@null"
            android:text="@string/btn_continue"
            android:textAllCaps="false"
            android:textColor="@color/grey_101"
            android:textSize="@dimen/_14ssp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/guideline" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivAppLogo"
            android:layout_width="@dimen/_42sdp"
            android:layout_height="@dimen/_42sdp"
            android:padding="@dimen/_5sdp"
            app:layout_constraintBottom_toBottomOf="@id/tvSignUpToContinue"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tvWelcome"
            app:srcCompat="@drawable/logo_1" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivBack"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:background="@drawable/circle_white_with_shadow"
            android:padding="@dimen/_10sdp"
            android:src="@drawable/ic_back"
            android:visibility="visible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clMainContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_25sdp"
            app:layout_constraintTop_toBottomOf="@id/tvSignUpToContinue">

            <!--Agency Name-->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clAgencyName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_20sdp"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/etAgencyName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_30sdp"
                    android:background="@null"
                    android:fontFamily="@font/product_sans_regular"
                    android:hint="@string/agency_name"
                    android:imeOptions="actionDone"
                    android:inputType="text"
                    android:maxLength="18"
                    android:maxLines="1"
                    android:paddingTop="@dimen/_10sdp"
                    android:paddingEnd="@dimen/_10sdp"
                    android:paddingBottom="@dimen/_10sdp"
                    android:singleLine="true"
                    android:text="@={signUpVM.mldSignup.agencyName}"
                    android:textColor="@color/black"
                    android:textColorHint="@color/grey_100"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvYourAgencyName" />

                <com.rentalhomes.utils.customviews.RegularTextView
                    android:id="@+id/tvYourAgencyName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tell_us_your_agency_name"
                    android:textColor="@color/grey_201"
                    android:textSize="@dimen/_18ssp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.rentalhomes.utils.customviews.RegularTextView
                    android:id="@+id/tvValAgencyName"
                    style="@style/textView_validation"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/msg_empty_agency_name"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="@id/etAgencyName"
                    app:layout_constraintStart_toStartOf="@id/etAgencyName"
                    app:layout_constraintTop_toBottomOf="@id/etAgencyName" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!--FirstName & LastName-->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clFNameLName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/etFName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_25sdp"
                    android:background="@null"
                    android:fontFamily="@font/product_sans_regular"
                    android:hint="@string/hint_first_name"
                    android:imeOptions="actionNext"
                    android:inputType="textCapSentences"
                    android:maxLength="18"
                    android:maxLines="1"
                    android:paddingTop="@dimen/_10sdp"
                    android:paddingEnd="@dimen/_10sdp"
                    android:paddingBottom="@dimen/_10sdp"
                    android:singleLine="true"
                    android:text="@={signUpVM.mldSignup.firstName}"
                    android:textColor="@color/black"
                    android:textColorHint="@color/grey_100"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvTellUsYourName" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/etLName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:background="@null"
                    android:fontFamily="@font/product_sans_regular"
                    android:hint="@string/hint_last_name"
                    android:imeOptions="actionDone"
                    android:inputType="textCapSentences"
                    android:maxLength="18"
                    android:maxLines="1"
                    android:paddingTop="@dimen/_10sdp"
                    android:paddingEnd="@dimen/_10sdp"
                    android:paddingBottom="@dimen/_10sdp"
                    android:singleLine="true"
                    android:text="@={signUpVM.mldSignup.lastName}"
                    android:textColor="@color/black"
                    android:textColorHint="@color/grey_100"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvValFName" />

                <com.rentalhomes.utils.customviews.RegularTextView
                    android:id="@+id/tvValFName"
                    style="@style/textView_validation"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/msg_empty_email"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="@id/etFName"
                    app:layout_constraintStart_toStartOf="@id/etFName"
                    app:layout_constraintTop_toBottomOf="@id/etFName" />

                <com.rentalhomes.utils.customviews.RegularTextView
                    android:id="@+id/tvTellUsYourName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tell_us_your_name"
                    android:textColor="@color/grey_200"
                    android:textSize="@dimen/_18ssp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.rentalhomes.utils.customviews.RegularTextView
                    android:id="@+id/tvValLName"
                    style="@style/textView_validation"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/msg_empty_email"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="@id/etLName"
                    app:layout_constraintStart_toStartOf="@id/etLName"
                    app:layout_constraintTop_toBottomOf="@id/etLName" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!--Mobile Number-->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clMobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_30sdp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/etMobile"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:background="@null"
                    android:fontFamily="@font/product_sans_regular"
                    android:hint="@string/mobile_number"
                    android:imeOptions="actionDone"
                    android:inputType="phone"
                    android:maxLength="12"
                    android:maxLines="1"
                    android:paddingStart="@dimen/_5sdp"
                    android:paddingTop="@dimen/_10sdp"
                    android:paddingEnd="@dimen/_10sdp"
                    android:paddingBottom="@dimen/_10sdp"
                    android:singleLine="true"
                    android:text="@={signUpVM.mldSignup.mobile}"
                    android:textColor="@color/black"
                    android:textColorHint="@color/grey_100"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/tvCountryCode"
                    app:layout_constraintTop_toBottomOf="@id/tvTellUsMobile" />

                <com.rentalhomes.utils.customviews.RegularTextView
                    android:id="@+id/tvTellUsMobile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tell_us_your_mobile_number"
                    android:textColor="@color/grey_201"
                    android:textSize="@dimen/_18ssp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.rentalhomes.utils.customviews.RegularTextView
                    android:id="@+id/tvCountryCode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/australia_phone_country_code"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14ssp"
                    app:layout_constraintBottom_toBottomOf="@id/etMobile"
                    app:layout_constraintEnd_toStartOf="@id/etMobile"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/etMobile" />

                <com.rentalhomes.utils.customviews.RegularTextView
                    android:id="@+id/tvValMobile"
                    style="@style/textView_validation"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/msg_empty_mobile"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="@id/etMobile"
                    app:layout_constraintStart_toStartOf="@id/etMobile"
                    app:layout_constraintTop_toBottomOf="@id/etMobile" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!--Email-->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/etEmail"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_30sdp"
                    android:background="@null"
                    android:fontFamily="@font/product_sans_regular"
                    android:hint="@string/enter_email"
                    android:imeOptions="actionDone"
                    android:inputType="textEmailAddress"
                    android:maxLines="1"
                    android:paddingTop="@dimen/_10sdp"
                    android:paddingEnd="@dimen/_10sdp"
                    android:paddingBottom="@dimen/_10sdp"
                    android:singleLine="true"
                    android:text="@={signUpVM.mldSignup.email}"
                    android:textColor="@color/black"
                    android:textColorHint="@color/grey_100"
                    app:layout_constraintEnd_toStartOf="@id/tvGetOTP"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvGiveUsYourEmail" />

                <com.rentalhomes.utils.customviews.RegularTextView
                    android:id="@+id/tvGiveUsYourEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/give_us_your_email"
                    android:textColor="@color/grey_201"
                    android:textSize="@dimen/_18ssp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.rentalhomes.utils.customviews.RegularTextView
                    android:id="@+id/tvValEmail"
                    style="@style/textView_validation"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/msg_empty_email"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="@id/etEmail"
                    app:layout_constraintStart_toStartOf="@id/etEmail"
                    app:layout_constraintTop_toBottomOf="@id/etEmail" />

                <com.rentalhomes.utils.customviews.BoldTextView
                    android:id="@+id/tvGetOTP"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:enabled="false"
                    android:onClick="@{()->signUpVM.onGetOTPClick()}"
                    android:paddingVertical="@dimen/_3sdp"
                    android:text="Get OTP"
                    android:textColor="@color/grey_100"
                    android:textSize="@dimen/_10ssp"
                    app:layout_constraintBottom_toBottomOf="@id/etEmail"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/etEmail" />

                <!--OTP Box-->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/clOTP"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:visibility="gone"
                    app:layout_constraintTop_toBottomOf="@id/etEmail">

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/edtOtp1"
                        style="@style/editText_otp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/box_solid_white_outline_grey_curved_5"
                        android:hint="0"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/edtOtp2"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/edtOtp2"
                        style="@style/editText_otp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:background="@drawable/box_solid_white_outline_grey_curved_5"
                        android:hint="0"
                        app:layout_constraintBottom_toTopOf="@id/edtOtp1"
                        app:layout_constraintEnd_toStartOf="@id/edtOtp3"
                        app:layout_constraintStart_toEndOf="@id/edtOtp1"
                        app:layout_constraintTop_toBottomOf="@id/edtOtp1" />

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/edtOtp3"
                        style="@style/editText_otp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:background="@drawable/box_solid_white_outline_grey_curved_5"
                        android:hint="0"
                        app:layout_constraintBottom_toTopOf="@id/edtOtp1"
                        app:layout_constraintEnd_toStartOf="@id/edtOtp4"
                        app:layout_constraintStart_toEndOf="@id/edtOtp2"
                        app:layout_constraintTop_toBottomOf="@id/edtOtp1" />

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/edtOtp4"
                        style="@style/editText_otp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:background="@drawable/box_solid_white_outline_grey_curved_5"
                        android:hint="0"
                        android:imeOptions="actionDone"
                        app:layout_constraintBottom_toTopOf="@id/edtOtp1"
                        app:layout_constraintStart_toEndOf="@id/edtOtp3"
                        app:layout_constraintTop_toBottomOf="@id/edtOtp1" />

                    <!--<androidx.appcompat.widget.AppCompatImageButton
                        android:id="@+id/ivResendOTP"
                        android:layout_width="@dimen/_24sdp"
                        android:layout_height="@dimen/_24sdp"
                        android:background="@drawable/ic_resend_otp"
                        android:onClick="@{()->signUpVM.onGetOTPClick()}"
                        android:tint="@color/color_green"
                        android:visibility="visible"
                        app:layout_constraintBottom_toBottomOf="@id/clOTP"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/clOTP" />-->
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!--Password-->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.appcompat.widget.AppCompatCheckBox
                    android:id="@+id/cbTermsCondition"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_30sdp"
                    android:button="@drawable/selector_checkbox"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvValConfirmPassword" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/etConfirmPassword"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@null"
                    android:hint="@string/confirm_password"
                    android:imeOptions="actionDone"
                    android:inputType="textPassword"
                    android:maxLength="16"
                    android:maxLines="1"
                    android:paddingTop="@dimen/_10sdp"
                    android:paddingEnd="@dimen/_10sdp"
                    android:paddingBottom="@dimen/_10sdp"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textColorHint="@color/grey_100"
                    app:layout_constraintEnd_toStartOf="@id/ivVisIconConf"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvValPassword" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivVisIconConf"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:padding="@dimen/_5sdp"
                    android:src="@drawable/ic_visibility_off"
                    app:layout_constraintBottom_toBottomOf="@id/etConfirmPassword"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/etConfirmPassword" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/etPassword"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:background="@null"
                    android:fontFamily="@font/product_sans_regular"
                    android:hint="@string/enter_password"
                    android:imeOptions="actionNext"
                    android:inputType="textPassword"
                    android:maxLength="16"
                    android:maxLines="1"
                    android:paddingTop="@dimen/_10sdp"
                    android:paddingEnd="@dimen/_10sdp"
                    android:paddingBottom="@dimen/_10sdp"
                    android:singleLine="true"
                    android:text="@={signUpVM.mldSignup.password}"
                    android:textColor="@color/black"
                    android:textColorHint="@color/grey_100"
                    app:layout_constraintEnd_toStartOf="@id/ivVisIconPass"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvFillPassword" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivVisIconPass"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:padding="@dimen/_5sdp"
                    android:src="@drawable/ic_visibility_off"
                    app:layout_constraintBottom_toBottomOf="@id/etPassword"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/etPassword" />

                <com.rentalhomes.utils.customviews.RegularTextView
                    android:id="@+id/tvFillPassword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/fill_password"
                    android:textColor="@color/grey_201"
                    android:textSize="@dimen/_18ssp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.rentalhomes.utils.customviews.RegularTextView
                    android:id="@+id/tvValConfirmPassword"
                    style="@style/textView_validation"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/msg_empty_email"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="@id/etConfirmPassword"
                    app:layout_constraintStart_toStartOf="@id/etConfirmPassword"
                    app:layout_constraintTop_toBottomOf="@id/etConfirmPassword" />

                <com.rentalhomes.utils.customviews.RegularTextView
                    android:id="@+id/tvValPassword"
                    style="@style/textView_validation"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/msg_empty_email"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="@id/etPassword"
                    app:layout_constraintStart_toStartOf="@id/etPassword"
                    app:layout_constraintTop_toBottomOf="@id/etPassword" />

                <com.rentalhomes.utils.customviews.RegularTextView
                    android:id="@+id/tvCBText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_4sdp"
                    android:text="@string/terms_and_conditions"
                    android:textColor="@color/grey_102"
                    android:textSize="@dimen/_11ssp"
                    app:layout_constraintBottom_toBottomOf="@id/cbTermsCondition"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/cbTermsCondition"
                    app:layout_constraintTop_toTopOf="@id/cbTermsCondition" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!--Promo Code-->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clPromoCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/etPromo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_30sdp"
                    android:background="@null"
                    android:fontFamily="@font/product_sans_regular"
                    android:hint="@string/promo_code"
                    android:imeOptions="actionDone"
                    android:inputType="text"
                    android:maxLines="1"
                    android:paddingTop="@dimen/_10sdp"
                    android:paddingEnd="@dimen/_10sdp"
                    android:paddingBottom="@dimen/_10sdp"
                    android:singleLine="true"
                    android:text="@={signUpVM.promoCode}"
                    android:textColor="@color/black"
                    android:textColorHint="@color/grey_100"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvPromoCode" />

                <com.rentalhomes.utils.customviews.RegularTextView
                    android:id="@+id/tvPromoCode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/promo_code_title"
                    android:textColor="@color/grey_201"
                    android:textSize="@dimen/_17ssp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.rentalhomes.utils.customviews.RegularTextView
                    android:id="@+id/tvValPromo"
                    style="@style/textView_validation"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/msg_empty_email"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="@id/etPromo"
                    app:layout_constraintStart_toStartOf="@id/etPromo"
                    app:layout_constraintTop_toBottomOf="@id/etPromo" />

                <com.rentalhomes.utils.customviews.BoldTextView
                    android:id="@+id/tvVerify"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:enabled="false"
                    android:onClick="@{()->signUpVM.verifyPromoCodeCall()}"
                    android:paddingHorizontal="@dimen/_8sdp"
                    android:paddingVertical="@dimen/_3sdp"
                    android:text="@string/verify"
                    android:textColor="@color/grey_100"
                    android:textSize="@dimen/_10ssp"
                    app:layout_constraintBottom_toBottomOf="@id/etPromo"
                    app:layout_constraintEnd_toEndOf="@id/etPromo"
                    app:layout_constraintTop_toTopOf="@id/etPromo" />

                <com.rentalhomes.utils.customviews.BoldTextView
                    android:id="@+id/tvVerifiedPromo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:gravity="center"
                    android:textColor="@color/color_green"
                    android:textSize="@dimen/_12ssp"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="@id/tvVerify"
                    app:layout_constraintStart_toStartOf="@id/tvVerify"
                    app:layout_constraintTop_toBottomOf="@id/tvVerify"
                    tools:text="123456" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!--Main Content layout-->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clDoNotHaveAcc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_5sdp"
            android:padding="@dimen/_5sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <com.rentalhomes.utils.customviews.BoldTextView
                android:id="@+id/tvSignIn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_4sdp"
                android:text="@string/sign_in"
                android:textAllCaps="true"
                android:textColor="@color/color_green"
                android:textSize="@dimen/_13ssp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/tvDoNotHaveAcc"
                app:layout_constraintTop_toTopOf="parent" />

            <com.rentalhomes.utils.customviews.RegularTextView
                android:id="@+id/tvDoNotHaveAcc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/already_have_an_account"
                android:textColor="@color/grey_101"
                android:textSize="@dimen/_12ssp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.68" />

        <com.rentalhomes.utils.customviews.RegularTextView
            android:id="@+id/tvSignUpToContinue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:text="@string/sign_up_to_continue"
            android:textColor="@color/grey_101"
            android:textSize="@dimen/_14ssp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvWelcome" />

        <!--Do not have account-->
        <com.rentalhomes.utils.customviews.RegularTextView
            android:id="@+id/tvWelcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="@string/create_account"
            android:textColor="@color/black_101"
            android:textSize="@dimen/_22ssp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ivBack" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>