<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Drop Shadow Stack -->
    <item>
        <shape android:shape="rectangle">
            <padding
                android:left="1dp"
                android:right="1dp"
                android:top="1dp" />

            <solid android:color="#00CCCCCC" />
            <corners
                android:topLeftRadius="@dimen/_10sdp"
                android:topRightRadius="@dimen/_10sdp" />

        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <padding
                android:left="2dp"
                android:right="2dp"
                android:top="1dp" />

            <solid android:color="#10CCCCCC" />
            <corners
                android:topLeftRadius="@dimen/_10sdp"
                android:topRightRadius="@dimen/_10sdp" />

        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <padding
                android:left="2dp"
                android:right="2dp"
                android:top="1dp" />

            <solid android:color="#20CCCCCC" />
            <corners
                android:topLeftRadius="@dimen/_10sdp"
                android:topRightRadius="@dimen/_10sdp" />

        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <padding
                android:left="1dp"
                android:right="2dp"
                android:top="1dp" />

            <solid android:color="#30CCCCCC" />
            <corners
                android:topLeftRadius="@dimen/_10sdp"
                android:topRightRadius="@dimen/_10sdp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <padding
                android:left="1dp"
                android:right="1dp"
                android:top="1dp" />

            <solid android:color="@color/grey_108" />
            <corners
                android:topLeftRadius="@dimen/_10sdp"
                android:topRightRadius="@dimen/_10sdp" />

        </shape>
    </item>

    <!-- Background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white" />
            <corners
                android:topLeftRadius="@dimen/_10sdp"
                android:topRightRadius="@dimen/_10sdp" />
        </shape>
    </item>

</layer-list>